@{
    ViewBag.Title = Resources.LoginTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">

    <div class="col-lg-4">
        <form class="form-signin">
            <h4 class="form-signin-heading">@Resources.SignInHeader</h4>
            <div>
                <input id="txtSignInEmail" type="text" class="form-control" placeholder="@Resources.Email">
            </div>
            <div>
                <input id="txtSignInPwd" type="password" class="form-control" placeholder="@Resources.Password">
            </div>
            <label class="checkbox">
                <input id='chkRemember' type="checkbox" value="remember-me"> @Resources.RememberMeCheckBox
            </label>
            <button id="btnSignIn" data-loading-text="Loading..." class="btn btn-success btn-block" type="submit">@Resources.SignInButton</button>
            <br />
            <div id="errSignIn" class="alert hide"></div>
            <hr />            
            <button id="btnSignInAnonym" class="btn btn-default btn-block" type="submit">@Resources.SignInAnonymButton</button>
      </form>
    </div>

    <div class="col-lg-4">
        <form class="form-signin">
            <h4 class="form-signin-heading">@Resources.SignUpHeader</h4>
            <div>
                <input id="txtSignUpEmail" type="text" class="form-control" placeholder="@Resources.Email">
            </div>
            <div>
                <input id="txtSignUpPwd" type="password" class="form-control" placeholder="@Resources.Password">
            </div>
            <label class="checkbox">
                <input id="chkAccept" type="checkbox" value="accept"> @Html.Raw(Resources.AcceptTermsCheckBox)
            </label>
            <button id="btnSignUp" class="btn btn-primary btn-block" type="submit">@Resources.SignUpButton</button>
            <br />
            <div id="errSignUp" class="alert hide"></div>
        </form>
    </div>
</div>

<script type="text/javascript">
    Resources = (typeof(Resources) != "undefined" && Resources) || {};
    Resources.InvalidEmail = '@Resources.InvalidEmail';
    Resources.InvalidPassword = '@Resources.InvalidPassword';
    Resources.InvalidCredentials = '@Resources.InvalidCredentials';
    Resources.SuccessAuthorization = '@Resources.SuccessAuthorization';

    Resources.NotAcceptedTerms = '@Resources.NotAcceptedTerms';
    Resources.SuccessAuthentification = '@Resources.SuccessAuthentification';
    Resources.ErrorAuthentification = '@Resources.ErrorAuthentification';
</script>